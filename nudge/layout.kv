#:kivy 1.11.1
#:import sys sys
#:import wb webbrowser

<Main_Window>
    name: "main"

    FloatLayout:
        cols: 1

        canvas.before:
            Color:
                rgba: .99,.99,.99,1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Social Media Platforms"
            size_hint: .25, .1
            pos_hint: {"x": .375, "top":1}
            font_size: 32
            color: 0,0,0,1
            canvas.before:
                Color:
                    rgba: .99,.99,.99,1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Button:
            text: "Facebook"
            size_hint: 0.2, 0.1
            pos_hint: {"x":0, "top":.85}
            on_release:
                root.manager.current = "facebook"

        Button:
            text: "Twitter"
            size_hint: 0.2, 0.1
            pos_hint: {"x":0, "top":.7}
            on_release:
                root.manager.current = "twitter"

        Button:
            text: "LinkedIn"
            size_hint: 0.2, 0.1
            pos_hint: {"x":0, "top":.55}
            on_release:
                root.manager.current = "linkedin"

        Button:
            text: "Instagram"
            size_hint: 0.2, 0.1
            pos_hint: {"x":0, "top":.40}
            on_release:
                root.manager.current = "instagram"
        Button:
            text: "Snapchat"
            size_hint: 0.2, 0.1
            pos_hint: {"x":0, "top":.25}
            on_release:
                root.manager.current = "snapchat"

        Button:
            text: "Quit"
            size_hint: .1, .1
            pos_hint: {"x":.45, "bottom":1}
            on_release:
                sys.exit()

