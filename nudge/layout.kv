        Button:
            text: "Home"
            size_hint: .1, .1
            pos_hint: {"right":1, "bottom":1}
            on_release:
                root.manager.current = "main"

        Label:
            text: "Facebook Allows You To: "
            size_hint: .3, .05
            pos_hint: {"x":.02, "top":.9}
            color: 0,0,0,1
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            canvas.before:
                Color:
                    rgba: .99,.99,.99,1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            text:
                """* Modify who can see your posts
                * Recover account through multiple methods
                * Use 2-factor authenticatoin
                * Receive nudges about unrecognized logins
                * Manage how your profile is found from searches"""

            size_hint: .4, None
            pos_hint: {"x":.02, "top":.85}
            color: 0,0,0,1
            text_size: self.width, None
            height: self.texture_size[1]
            halign: 'left'
            valign: 'middle'
            canvas.before:
                Color:
                    rgba: .99,.99,.99,1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            text: "Facebook Privacy Concerns: "
            size_hint: .3, .05
            pos_hint: {"x":.58, "top":.9}
            color: 0,0,0,1
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            canvas.before:
                Color:
                    rgba: .99,.99,.99,1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            text:
                """* Most privacy concerns are opt-out (face-recognition)
                * Cannot change visibility of all posts at once
                * Identity is used in ads that are shown to others
                * Enables tracking on other websites
                * Deleted content is not deleted
                * Uses location data and history
                * Uses browser fingerprinting and cookies
                * Many breaches shows it is hard to protect"""

            size_hint: .4, None
            pos_hint: {"x":.58, "top":.85}
            color: 0,0,0,1
            text_size: self.width, None
            height: self.texture_size[1]
